extends layout 
 
block content 
  h1= title 
 
  form(id='pastryForm', action="/resource/pastrys", method="POST") 
    div.form-group 
        label.costumeAttr(for='pastry') Pastry type 
        input#pastry(type='text', name='pastry') 
    div.form-group 
        label.costumeAttr(for='toppings') Toppings 
        input#toppings(type='text', name='toppings') 
    div.form-group 
        label.costumeAttr(for='price') Price 
        input#price(type='number', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['pastryForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 